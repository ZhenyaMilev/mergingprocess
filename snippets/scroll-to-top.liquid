<!-- Scroll to Top Button -->
{{ 'scroll-to-top.css' | asset_url | stylesheet_tag }}
<div id="scroll-to-top">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 24 24" style="display: block; margin: auto;">
        <path d="M12 19a1 1 0 0 1-1-1v-9.586l-3.707 3.707a1 1 0 0 1-1.414-1.414l5.414-5.414a1 1 0 0 1 1.414 0l5.414 5.414a1 1 0 0 1-1.414 1.414L13 8.414V18a1 1 0 0 1-1 1z"/>
    </svg>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const scrollToTopButton = document.getElementById('scroll-to-top');

    window.addEventListener('scroll', function () {
        if (window.scrollY > 300) {
            scrollToTopButton.classList.add('show');
        } else {
            scrollToTopButton.classList.remove('show');
        }
    });

    scrollToTopButton.addEventListener('click', function () {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
});
</script>


